{
    "name": "themekraft/wc4bp",
    "description": "WooCommerce for BuddyPress - Shop solution for your BuddyPress community. Integrates a WooCommerce installation with a BuddyPress social network.",
    "keywords": [
        "buddypress", "social networking", "woocommerce", "e-commerce"
    ],
    "homepage": "http://www.themekraft.com",
    "type": "wordpress-plugin",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Sven Lehnert",
            "email": "svenl@themekraft.com"
        },
        {
            "name": "Guillermo Figueroa Mesa",
            "email": "gfirem@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {},
    "require-dev": {
        "bruli/php-git-hooks": "^5.1"
    },
    "scripts":{
        "package": "sh package.sh",
        "test": [
        	"#IF NOT WORK REVIEW THE TEST COMMAND REVIEW YOUR TEST DATABASE AND CREDENTIALS#",
            "SHELL_INTERACTIVE=1",
            "cd ../../../..",
            "vagrant ssh -- 'cd /var/www/html/wp-content/plugins/wc4bp-premium; bash bin/install-wp-tests.sh wordpress_test user 'userpass' localhost latest true;'",
            "vagrant ssh -- -t '/home/vagrant/.composer/vendor/bin/phpunit -c /var/www/html/wp-content/plugins/wc4bp-premium/phpunit.xml.dist --colors=always;'"
        ],
        "start": [
            "cd ../../../..",
            "vagrant up"
        ],
        "stop": [
            "cd ../../../..",
            "vagrant halt"
        ],
		"post-install-cmd": [
		  	"PhpGitHooks\\Infrastructure\\Composer\\ConfiguratorScript::buildConfig"
		],
		"post-update-cmd": [
		  	"PhpGitHooks\\Infrastructure\\Composer\\ConfiguratorScript::buildConfig"
		]
    }
}
